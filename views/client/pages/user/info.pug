extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
   .container.my-3
      .row
         .col-12
            +box-head("Thông tin tài khoản")

      .row 
         .col-12 
            if (user.avatar)
               img(src=infoUser.avatar width="150px" class="mb-3" alt=user.fullName)
            else
               img(src="/admin/images/avatar.png" alt=user.fullName width="150px" class="mb-3")

            if (user.fullName)
               p Họ tên: <b>#{user.fullName}</b>

            if (user.email)
               p Email: <b>#{user.email}</b>

            if (user.phone)
               p Số điện thoại: <b>#{user.phone}</b>
            else
                p Số điện thoại: <b>Không có</b>
            p 
               span Trạng thái: 
               span
                  <b>#{user.status === "active" ? "Hoạt động": "Dừng hoạt động"}</b>
            a(
            href=`/user/edit`
            class="btn btn-primary"
            ) Chỉnh sửa thông tin